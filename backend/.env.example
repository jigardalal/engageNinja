# Database Configuration
DATABASE_PATH=./database.sqlite

# Server Configuration
BACKEND_PORT=5173
FRONTEND_PORT=3173
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_TIMEOUT_DAYS=30

# Authentication
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60
BCRYPT_ROUNDS=10

# Encryption
ENCRYPTION_KEY=your-encryption-key-for-storing-credentials

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:3173

# WebSocket / SSE
SSE_HEARTBEAT_INTERVAL_MS=30000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_FEATURES=true
ENABLE_WEBHOOK_VERIFICATION=true

# Stripe Billing Integration (Optional - only needed if using Stripe)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_test_api_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Application URLs (used for Stripe redirect URLs)
APP_URL=http://localhost:3173

# Twilio SMS master credentials used for seeding tenant rows
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
# Optional default sender number (E.164 format) when seeding tenants
TWILIO_PHONE_NUMBER=+15551234567
# Optional messaging service SID that owns the shortcode/10DLC (overrides from number if set)
TWILIO_MESSAGING_SERVICE_SID=MGXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Override webhook URL if different from APP_URL
TWILIO_WEBHOOK_URL=https://your-app.com/webhooks/twilio
# Optional map of tenant-specific phone numbers: tenantId:+1555000..., separated by commas
TWILIO_PHONE_MAP=

# Storage & notification configuration
BREVO_API_KEY=your-brevo-api-key
SUPPORT_EMAIL=support@example.com
SENDER_EMAIL=no-reply@example.com

# Invoice Generation Configuration
INVOICE_GENERATION_MODE=stream-only
# CLOUD_STORAGE_PROVIDER=s3
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# GCS_BUCKET=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GCS_KEY_FILE=/path/to/service-account-key.json
# AZURE_STORAGE_ACCOUNT=your-account-name
# AZURE_STORAGE_KEY=your-storage-key
# AZURE_CONTAINER=invoices

# Seed Data Configuration (Optional - for seeding demo AWS credentials)
SEED_AWS_ACCESS_KEY_ID=your-aws-access-key-id
SEED_AWS_SECRET_ACCESS_KEY=your-secret-access-key
SEED_AWS_REGION=us-east-2
SEED_SES_VERIFIED_EMAIL=you@example.com

# Cloud Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1

# SQS Queue URLs
SQS_OUTBOUND_MESSAGES_URL=https://sqs.us-east-1.amazonaws.com/123456789012/engageninja-outbound-messages-dev
SQS_SMS_EVENTS_URL=https://sqs.us-east-1.amazonaws.com/123456789012/engageninja-sms-events-dev
SQS_EMAIL_EVENTS_URL=https://sqs.us-east-1.amazonaws.com/123456789012/engageninja-email-events-dev
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789012/engageninja-outbound-messages-dlq-dev

# SNS Topic ARNs
SNS_SMS_EVENTS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:engageninja-sms-events-dev
SNS_EMAIL_EVENTS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:engageninja-email-events-dev

# SES Configuration
SES_CONFIGURATION_SET=engageninja-email-events
SES_SENDER_EMAIL=your-verified-email@example.com

# Lambda Metrics Callback Configuration
# Used by Lambda functions to send campaign metrics back to backend for real-time SSE updates
METRICS_ENDPOINT=http://localhost:5173/webhooks/internal/metrics
METRICS_AUTH_TOKEN=secret-token-for-lambda-callbacks

# Note: Tenant-specific channel credentials and webhook tokens/secrets
# are stored in the database (tenant_channel_credentials_v2), not in env.
