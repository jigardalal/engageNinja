# Database Configuration
DATABASE_PATH=./database.sqlite

# Server Configuration
BACKEND_PORT=5173
FRONTEND_PORT=3173
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_TIMEOUT_DAYS=30

# Authentication
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60
BCRYPT_ROUNDS=10

# API Keys (External Services)
# Meta WhatsApp Cloud API
WHATSAPP_API_VERSION=v17.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# Amazon SES
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
SES_VERIFIED_SENDER_EMAIL=noreply@engageninja.local

# Brevo (Optional)
BREVO_API_KEY=your_brevo_api_key

# Anthropic Claude (for AI message generation)
CLAUDE_API_KEY=your_claude_api_key

# Encryption
ENCRYPTION_KEY=your-encryption-key-for-storing-credentials

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:3173

# WebSocket / SSE
SSE_HEARTBEAT_INTERVAL_MS=30000

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_FEATURES=true
ENABLE_WEBHOOK_VERIFICATION=true
