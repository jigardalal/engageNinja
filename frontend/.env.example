# Frontend Environment Variables

# API Configuration
VITE_API_URL=http://localhost:5173/api
VITE_WS_URL=ws://localhost:5173

# Application Configuration
VITE_APP_NAME=EngageNinja
VITE_APP_VERSION=1.0.0

# Environment
VITE_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_AI_FEATURES=true

# UI Configuration
VITE_TOAST_DURATION_MS=3000
VITE_MODAL_ANIMATION_DURATION_MS=300

# Pagination
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=500

# File Upload
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=.csv,.xlsx

# Timeouts
VITE_REQUEST_TIMEOUT_MS=30000
VITE_SESSION_WARNING_MINUTES=5
