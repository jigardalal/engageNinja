{
  "name": "engageninja",
  "version": "0.1.0",
  "description": "EngageNinja - WhatsApp-First Customer Engagement Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:test": "concurrently \"npm run dev:backend --prefix backend\" \"npm run dev --prefix frontend -- --port 3174\"",
    "build": "npm run build --prefix frontend && npm run build --prefix backend",
    "db:init": "npm run db:init --prefix backend",
    "db:seed": "npm run db:seed --prefix backend",
    "db:reset": "npm run db:reset --prefix backend",
    "start": "node backend/src/index.js",
    "test:e2e": "playwright test",
    "test:signup": "playwright test signup",
    "test:login": "playwright test login",
    "test:tenant": "playwright test tenant-selection",
    "test:campaign": "playwright test create-campaign",
    "test:contact": "playwright test add-contact",
    "test:billing": "playwright test billing-upgrade",
    "test:dashboard": "playwright test dashboard-overview",
    "test:contact-details": "playwright test view-contact-details",
    "test:edit-contact": "playwright test edit-contact",
    "test:template": "playwright test create-template",
    "test:campaign-details": "playwright test campaign-detail-tracking",
    "test:invite-team": "playwright test invite-team-member",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:headed:signup": "playwright test signup --headed",
    "test:e2e:headed:login": "playwright test login --headed",
    "test:e2e:headed:tenant": "playwright test tenant-selection --headed",
    "test:e2e:headed:campaign": "playwright test create-campaign --headed",
    "test:e2e:headed:contact": "playwright test add-contact --headed",
    "test:e2e:headed:billing": "playwright test billing-upgrade --headed",
    "test:e2e:headed:dashboard": "playwright test dashboard-overview --headed",
    "test:e2e:headed:contact-details": "playwright test view-contact-details --headed",
    "test:e2e:headed:edit-contact": "playwright test edit-contact --headed",
    "test:e2e:headed:campaign-details": "playwright test campaign-detail-tracking --headed",
    "test:e2e:headed:invite-team": "playwright test invite-team-member --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:3173"
  },
  "keywords": [
    "whatsapp",
    "engagement",
    "campaigns",
    "multi-tenant"
  ],
  "author": "EngageNinja Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3"
  }
}
