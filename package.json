{
  "name": "engageninja",
  "version": "0.1.0",
  "description": "EngageNinja - WhatsApp-First Customer Engagement Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:test": "concurrently \"npm run dev:backend --prefix backend\" \"npm run dev --prefix frontend -- --port 3174\"",
    "build": "npm run build --prefix frontend && npm run build --prefix backend",
    "db:init": "npm run db:init --prefix backend",
    "db:seed": "npm run db:seed --prefix backend",
    "db:reset": "npm run db:reset --prefix backend",
    "start": "node backend/src/index.js",
    "test:e2e": "playwright test",
    "test:signup": "playwright test signup",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:headed:signup": "playwright test signup --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen http://localhost:3173"
  },
  "keywords": [
    "whatsapp",
    "engagement",
    "campaigns",
    "multi-tenant"
  ],
  "author": "EngageNinja Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3"
  }
}
